<!DOCTYPE html>
<html>
<head>
  <title>Free Reverse Mortgage Guide</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield :head %>
</head>
<body>
<div class="full-width-banner">
	<div class="container">
		<div class="row">
			<div class="span6">
				<div class="logo">
					<img src="/assets/logo.png" width="500px">
				</div>
				<div class="phone">
					Call Toll Free: <span style="font-weight:bold">(888) 690-3316</span>
				</div>
			</div>
			<div class="span3 offset3">
				<img src="/assets/house.png" class="house">
			</div>
		</div>
	</div>
</div>
<%= yield %>
<script type="text/javascript">
	  var _gaq = _gaq || [];
	  _gaq.push(['_setAccount', 'UA-39819677-2']);
	  _gaq.push(['_trackPageview']);

	  (function() {
	    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
	    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
	    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
	  })();
</script>
<script type="text/javascript">
function woopraReady(tracker) {
    tracker.setDomain('guide.reversemortgageselect.com');
    tracker.setIdleTimeout(1800000);
    tracker.track();
    return false;
}
(function() {
    var wsc = document.createElement('script');
    wsc.src = document.location.protocol+'//static.woopra.com/js/woopra.js';
    wsc.type = 'text/javascript';
    wsc.async = true;
    var ssc = document.getElementsByTagName('script')[0];
    ssc.parentNode.insertBefore(wsc, ssc);
})();
</script>
</body>
</html>
